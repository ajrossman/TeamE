    <div class="container main-content">
    	<div class="row">
  			<div class="col-md-5">
          <%= render "the_button" %>
  			</div>
  			<div class="col-md-7">
          <div class="row">
            <h3 class="pull-left">Current Streak</h3>
            <h3 class="pull-right">Longest Streak</h3>
          </div>
  				<div class="row streak-status">
            <div class="col-xs-1 col-md-1"><%= render partial: 'exercise_icon' %></div>
            <div class="col-xs-9 col-md-9">
              <%= render partial: "habit_bar", locals: {events: @exercise_events} %>
            </div>
            <div class="col-xs-1 col-md-1 streak-number"><p><%= @user.exercise_streak %></p></div>
            <div class="col-xs-1 col-md-1 streak-number"><p><%= @user.exercise_record %></p></div>
  				</div>
  				
  				<div class="row streak-status">
            <div class="col-xs-1 col-md-1"><%= render partial: 'eat_icon' %></div>
            <div class="col-xs-9 col-md-9">
              <%= render partial: "habit_bar", locals: {events: @eat_events} %>
            </div>
            <div class="col-xs-1 col-md-1 streak-number"><p><%= @user.eat_streak %></p></div>
            <div class="col-xs-1 col-md-1 streak-number"><p><%= @user.eat_record %></p></div>
  				</div>
  				
  				<div class="row streak-status">
            <div class="col-xs-1 col-md-1"><%= render partial: 'outdoor_icon' %></div>
            <div class="col-xs-9 col-md-9">
              <%= render partial: "habit_bar", locals: {events: @outdoor_events} %>
            </div>
            <div class="col-xs-1 col-md-1 streak-number"><p><%= @user.outdoor_streak %></p></div>
            <div class="col-xs-1 col-md-1 streak-number"><p><%= @user.outdoor_record %></p></div>
  				</div>
  			</div>
		</div>
		
		
		
		<div class="row">
			<div class="col-xs-12">
				<div class="panel panel-default">
  					<div class="panel-heading">
    					<h3 class="panel-title">Today's to-do</h3>
  					</div>
  					<div class="panel-body">
    					Go to Ethan Allen Park in Burlington and climb to the top of the tower.
    					<div class="confirm-deny pull-right">
    					<button type="button" class="btn btn-success btn-lg">
  							<span class="glyphicon glyphicon-ok"></span>
						</button>
						<button type="button" class="btn btn-danger btn-lg">
  							<span class="glyphicon glyphicon-remove"></span>
						</button>
						</div>
  					</div>
				</div>
			</div>
		</div>
    </div> <!-- /container -->
